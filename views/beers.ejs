<!DOCTYPE html>
<html>
<head>
    <% include /partials/head %>
    
</head>
<header><% include /partials/header %></header>
<body>
<div class="container">

    <div class="jumbotron text-center">
        <h1><img src="http://i.imgur.com/AIpeE2Q.png" class="drinkLogo">Beer & Wine! <img src="http://i.imgur.com/AIpeE2Q.png" class="drinkLogo"></h1>
        <a href="/cocktails" class="btn btn-default"><span class="fa fa-glass"> Cocktails</span></a></h1>

    </div>
    

</div>

<div>
<hr>
<div class="row">
			 <div class="col-sm-4">
                
                <div class="well">
                    <h3>Create New Beer/Wine</h3>
                    <!-- New Beer form -->
				    <form action="/beers" method="post">
				    	<div class="form-group">
				            <label>Name</label>
				            <input type="text" class="form-control" name="drinkName" placeholder="Name of Drink">
				        </div>
				        <div class="form-group">
				            <label>Type</label>
				            <input type="text" class="form-control" name="drinkType" placeholder="IE Wine or Beer">
				        </div>
				        <div class="form-group">
				            <label>Alcohol by volume</label>
				            <input type="float" class="form-control" name="abv" placeholder="Please enter a number">
				        </div>
				        <div class="form-group">
				            <label>Brand</label>
				            <input type="text" class="form-control" name="brand" placeholder="Brand of Alcohol">
				        </div>

				        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
				    </form>
                </div>

            </div>
            <div class="col-sm-8">
            <div class="well">
                <h1>Top Beers & Wines</h1>
                <p>List Beers Here</p>

                <% for (var i = 0; i < beers.length; i++) { %>
               		
        			<strong>Name</strong>:<a href='beers/<%= beers[i]._id %>'> <%= beers[i].drinkName %></a>
        			<strong>Type</strong>: <%= beers[i].drinkType %>
        			<strong>ABV</strong>: <%= beers[i].abv %>
        			<strong>Brand</strong>: <%= beers[i].brand %><br>

               	<% } %>

                </div>
                
            </div>
           
        </div>
</div>
    <footer>
        <% include /partials/footer %>
    </footer>
</body>
</html>   